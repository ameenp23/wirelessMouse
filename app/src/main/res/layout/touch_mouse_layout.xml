<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <RelativeLayout
        android:id="@+id/touch_area"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/button_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/touch_area"
        android:weightSum="2">

        <Button
            android:id="@+id/button_left_touch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/left_button_bg"
            android:text="Left"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_right_touch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_button_bg"
            android:gravity="center"
            android:text="Right"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/go_gyro_mouse"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/gyro_icon"
        android:background="@null"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>